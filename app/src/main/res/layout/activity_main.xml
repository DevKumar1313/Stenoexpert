<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_color_primary"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboarding_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/viewCenterofNext"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="-6dp"
        android:background="@drawable/view_pager_background" />

    <LinearLayout
        android:id="@+id/indicatorscontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_margin="20dp"

       android:orientation="horizontal"/>
    <TextView
        android:id="@+id/textskip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/skip"
        android:textSize="20sp"
        android:textColor="@color/custom_color_primary"
        android:layout_alignParentEnd="true"
        />


    <View
        android:id="@+id/view2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignTop="@id/imagenext"
        android:layout_alignBottom="@id/imagenext"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-25dp"
        android:layout_marginBottom="-2dp"
        android:layout_toStartOf="@+id/imagenext"
        android:layout_toEndOf="@+id/imagenext"
        android:background="@drawable/icon_outer_background" />

    <View
        android:id="@+id/viewCenterofNext"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignTop="@id/imagenext"
        android:layout_alignBottom="@id/imagenext"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-27dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/imagenext"
        android:layout_toEndOf="@id/imagenext" />

    <ImageView
        android:id="@+id/imagenext"
        android:layout_width="45dp"
        android:layout_height="45dp"
       android:background="@drawable/icon_background"
        android:src="@drawable/ic_navigate_next"
        android:layout_marginBottom="45dp"
        android:layout_above="@id/get_startbtn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/custom_color_secondary"
        android:contentDescription="@string/app_name" />

    <Button
        android:id="@+id/get_startbtn"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:text="@string/get_started"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_style"




        />


</RelativeLayout>
