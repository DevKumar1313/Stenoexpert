<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".settings.SettingsPage">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/Silver"
            app:title="Settings"
            app:navigationIcon="@drawable/arrow"/>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_below="@id/appbar">
        <TextView
            android:id="@+id/group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_settings"
            android:textColor="@color/Gray"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@+id/group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/profile_setting"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/profile_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/twotone_keyboard_arrow_right_24"
                android:contentDescription="@string/todo" />
        </LinearLayout>

        <TextView
            android:id="@+id/group3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_settings"
            android:textColor="@color/Gray"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@id/group2"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@+id/group4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group3"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/video_download_quality"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/twotone_keyboard_arrow_right_24"
                android:contentDescription="@string/todo"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group4"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@string/auto_play"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/auto_play"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                app:thumbTint="@color/Navy"
                android:checked="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/group5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/download_settings"
            android:textColor="@color/Gray"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@id/group"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@+id/group6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group5"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/video_download_quality"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/twotone_keyboard_arrow_right_24"
                android:contentDescription="@string/todo"/>
        </LinearLayout>

        <TextView
            android:id="@+id/group7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_and_support"
            android:textColor="@color/Gray"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@id/group6"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@+id/group8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group7"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/about_stenoexpert"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/twotone_keyboard_arrow_right_24"
                android:contentDescription="@string/todo"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group8"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/our_services"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/twotone_keyboard_arrow_right_24"
                android:contentDescription="@string/todo"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group9"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/frequently_asked_question"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/twotone_keyboard_arrow_right_24"
                android:contentDescription="@string/todo"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group10"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/share_stenoexpert"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/twotone_keyboard_arrow_right_24"
                android:contentDescription="@string/todo"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>