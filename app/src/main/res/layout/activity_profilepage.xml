<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#191414"
    tools:context=".profile_page.ProfilePage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_colour">
        <ImageView
            android:id="@+id/vectorImageView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_arrow_back_24"
            android:layout_gravity="start"

            android:contentDescription="@string/my_image" />
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_gravity="center_vertical"/>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/profile_image"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/person"
        android:src="@drawable/round_person_outline_24"
        android:contentDescription="@string/todo" />


    <TextView
        android:id="@+id/profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:text="@string/edit"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
       android:textStyle="normal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@+id/profile_edit"
        android:text="@string/username"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"

        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_image"
            android:src="@drawable/twotone_email_24"
            android:contentDescription="@string/my_images" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="@string/users_email_id"
            android:layout_marginStart="10dp"
            android:textSize="25sp"
            android:textColor="@color/white"

            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payment_method"
        android:textSize="25sp"
        android:textColor="#716767"
        android:layout_below="@+id/ll"

        android:text="@string/payments_method"/>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/payment_method">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:text="@string/cards"
            android:id="@+id/cards" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:id="@+id/arrow_1"
            android:src="@drawable/twotone_keyboard_arrow_right_24"
            android:contentDescription="@string/my_todo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:text="@string/upi" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:src="@drawable/twotone_keyboard_arrow_right_24"
            android:contentDescription="@string/choose_image" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Personal_info"
        android:textSize="25sp"
        android:textColor="#716767"
        android:layout_below="@+id/ll3"
        android:text="@string/personal_info"/>




    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Personal_info">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:text="@string/users_name" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:textSize="25sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll4">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:text="@string/mobile_number" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:textSize="25sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll5">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:text="@string/state" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:textSize="25sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll6">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:text="@string/district" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:textSize="25sp"
            />
    </LinearLayout>




</RelativeLayout>