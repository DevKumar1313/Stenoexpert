<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="13dp"
    android:layout_margin="10dp"
    android:background="@drawable/course_style">
    <ImageView
        android:id="@+id/course_Img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/agamya_logo"
        android:contentDescription="@string/my_image" />

    <TextView
        android:id="@+id/course_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_Img"
        android:text="@string/eklavya_batch"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_Title"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:text="@string/sahil_kumar"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Owner_name"
        android:text="@string/_4_5"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Owner_name"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/rating"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/Owner_name"
            android:layout_toRightOf="@id/rating"
            android:background="@drawable/baseline_star_rate_24"
            android:contentDescription="@string/todo"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/Owner_name"
            android:layout_toRightOf="@id/rating"
            android:background="@drawable/baseline_star_rate_24"
            android:contentDescription="@string/my_image"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/Owner_name"
            android:layout_toRightOf="@id/rating"
            android:background="@drawable/baseline_star_rate_24"
            android:contentDescription="@string/my_image"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/Owner_name"
            android:layout_toRightOf="@id/rating"
            android:background="@drawable/baseline_star_rate_24"
            android:contentDescription="@string/my_image"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/Owner_name"
            android:layout_toRightOf="@id/rating"
            android:background="@drawable/baseline_star_half_24"
            android:contentDescription="@string/my_image"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />


    </LinearLayout>

    <ImageView
        android:id="@+id/symbol"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/rating"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rupee"
        android:contentDescription="@string/my_image" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/symbol"
        android:layout_below="@+id/rating"
        android:layout_marginTop="15dp"
        android:text="@string/_449_00"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginStart="32dp"
        android:layout_marginTop="13dp"
        android:padding="10dp"
        android:background="@drawable/btn2_style"
        android:text="@string/bestseller"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>